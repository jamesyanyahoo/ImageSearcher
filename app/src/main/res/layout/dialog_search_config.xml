<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">

    <TextView
        android:id="@+id/dialog_config_tv_size"
        android:layout_width="115dp"
        android:layout_height="52dp"
        android:layout_marginBottom="2dp"
        android:gravity="center_vertical"
        android:text="IMAGE SIZE"
        android:textSize="15sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/dialog_config_sp_size"
        android:layout_width="wrap_content"
        android:layout_height="52dp"
        android:layout_marginBottom="2dp"
        android:layout_toRightOf="@id/dialog_config_tv_size" />

    <TextView
        android:id="@+id/dialog_config_tv_color"
        android:layout_width="115dp"
        android:layout_height="52dp"
        android:layout_below="@id/dialog_config_sp_size"
        android:layout_marginBottom="2dp"
        android:gravity="center_vertical"
        android:text="COLOR FILTER"
        android:textSize="15sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/dialog_config_sp_color"
        android:layout_width="wrap_content"
        android:layout_height="52dp"
        android:layout_below="@id/dialog_config_sp_size"
        android:layout_marginBottom="2dp"
        android:layout_toRightOf="@id/dialog_config_tv_color" />

    <TextView
        android:id="@+id/dialog_config_tv_type"
        android:layout_width="115dp"
        android:layout_height="52dp"
        android:layout_below="@id/dialog_config_sp_color"
        android:layout_marginBottom="2dp"
        android:gravity="center_vertical"
        android:text="IMAGE TYPE"
        android:textSize="15sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/dialog_config_sp_type"
        android:layout_width="wrap_content"
        android:layout_height="52dp"
        android:layout_below="@id/dialog_config_sp_color"
        android:layout_marginBottom="2dp"
        android:layout_toRightOf="@id/dialog_config_tv_type" />


    <TextView
        android:id="@+id/dialog_config_tv_site"
        android:layout_width="115dp"
        android:layout_height="52dp"
        android:layout_below="@id/dialog_config_sp_type"
        android:layout_marginBottom="2dp"
        android:gravity="center_vertical"
        android:text="SITE FILTER"
        android:textSize="15sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/dialog_config_txt_site"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_below="@id/dialog_config_sp_type"
        android:layout_marginBottom="2dp"
        android:layout_toRightOf="@id/dialog_config_tv_site"
        android:inputType="text"
        android:textSize="15sp" />

    <Button
        android:id="@+id/dialog_config_btn_apply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/dialog_config_txt_site"
        android:layout_margin="7dp"
        android:text="Apply" />
</RelativeLayout>